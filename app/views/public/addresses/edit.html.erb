<div class="container">
  <div class="row">
    <h2>配送先編集</h2>
    
    <%= form_with(model: @address, url:address_paht, local: true, method: :patch) do |f| %>
      <div class="form-group">
        <%= f.label :"郵便番号（ハイフンなし", class: "control-label" %>
        <%= f.text_field :postal_code, class: "postal_code" %>
      </div>
      
      <div class="form-group">
        <%= f.label :"住所", class: "control-label" %>
        <%= f.text_field :address, class: "address" %>
      </div>
      
      <div class="form-group">
        <%= f.label :"宛名", class: "control-label" %>
        <%= f.text_field :name, class: "name" %>
      </div>
      
      <div class="form-group">
        <%= f.submit '変更内容を保存', class= "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>