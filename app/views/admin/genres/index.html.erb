<dvi class="container">
  <div class="row">
    <div class="col-md-12 mt-5">
      <h3>ジャンル一覧・追加</h3>
    </div>
  </div>

  <div class="row my-3">
    <div class="col-md-12 mt-5">
      <%= form_with model: @genre, url:admin_genres_path, method: :post, remote:true do |f| %>
        <%= f.label :name, "ジャンル名" %>
        <%= f.text_field :name, id: "from" %>
        <%= f.submit "新規登録", class: "btn btn-success ml-4 py-1" %>
      <% end %>
    </div>
  </div>

  <div class="row my-3">
    <div class="col-md-3 mt-5">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</dvi>