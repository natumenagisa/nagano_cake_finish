<dvi class="container">
  <div class="row offset-2">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2>商品新規登録</h2>
    </div>
  </div>

  <div class="row offset-3">
    <div class="col-sm-10 px-sm-0 mx-auto mb-5">
      <%= form_with model: @item, url: admin_items_path, local: true do |f| %>
      <table>
        <tr>
          <div class="from-group">
            <th><%= f.label :商品画像 %></th>
            <th><%= f.file_field :image %></th>
          </div>
        </tr>

        <tr>
          <div class="form-group">
            <th><%= f.label :商品名 %></th>
            <th><%= f.text_field :name, placeholder:"商品名" %> </th>
          </div>
        </tr>

        <tr>
          <div class="from-group">
            <th><%= f.label :商品説明 %></th>
            <th><%= f.text_area :introduction, rows:'5', placeholder:"ここに説明文を記述します" %></th>
          </div>
        </tr>

        <tr>
          <div class="from-group">
            <th><%= f.label :ジャンル %></th>
            <th><%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt =>"--選択してください--" %></th>
          </div>
        </tr>

        <tr>
          <div class="from-group">
            <th><%= f.label :税抜価格 %></th>
            <th><%= f.text_field :price, placeholder:"1000" %>円</th>
          </div>
        </tr>

        <div class="from-group">
          <th><%= f.label :販売ステータス %></th>
          <td>
            <%= f.radio_button :is_active, true, checked: true %>
            <%= f.label :販売中 %>
            <%= f.radio_button :is_active, false %>
            <%= f.label :販売停止中 %>
          </td>
        </div>

        <tr>
          <div class="form-action">
            <th><%= f.submit "新規登録", class: "btn btn-success offset-10" %></th>
          </div>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</dvi>