<div class="container">
  <h2 class="mt-5">商品詳細</h2>
  <div class="row">
    <div class="col-lg text-center">
      <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "180x130" %>
      <% else %>
        <%= image_tag 'no_image', size: "180x130" %>
      <% end %>
    </div>
    <div class="col-lg">
      <table class="teble">
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>

        <tr>
          <th>商品説明</th>
          <td><%= @item.introduction %></td>
        </tr>

        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre_id %></td>
        </tr>

        <tr>
          <th>
            税込価格<br>
            (税抜価格)
          </th>
          <td><%= @item.with_tax_price %> (<%= @item.price %>)円</td>
        </tr>

        <tr>
          <th>販売ステータス</th>
          <td>
            <% if @item.is_active == true %>
              <p class="text-success">販売中</p>
            <% else %>
              <p>販売停止中</p>
            <% end %>
          </td>
        </tr>
      </table>

      <div class="justify-content-around">
        <p><%= link_to '編集する', edit_admin_item_path(@item.id), class: 'btn btn-success' %></p>
      </div>
    </div>
  </div>
</div>